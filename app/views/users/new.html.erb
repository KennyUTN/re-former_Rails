<%= form_with model: @user do |form| %>
<%= form.label "Username:" %>
<%= form.text_field :username %><br><br>
<%= form.label "E-mail:" %>
<%= form.text_field :email %><br><br>
<%= form.label "Password:" %>
<%= form.password_field :password %><br><br>
<%= form.submit "Create"%>
<% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
